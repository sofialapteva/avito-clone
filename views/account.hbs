<h2 style='text-align:center'>Мои объявления</h2>
<div style='display:grid; grid-template-columns:1fr 1fr 1fr'>
{{#each user.goods}}
<div style='width:200px; overflow:hidden; margin: 10px'>
  <img src={{this.image}} height=200px width=fit-content>
  <h3>{{this.title}}</h3>
  <div style='font-weight:700'>{{this.price}} рублей</div>
  <div>{{this.description}}</div>
  <div>{{this.location}}</div>
  <a href='/delete/{{this._id}}'>удалить</a>
</div>
{{/each}}

</div>
